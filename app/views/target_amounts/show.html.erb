<!-- app/views/targets/show.html.erb -->

<h1>Target Details</h1>
<% @targets.each do |target| %>
  <li><p><strong>Target Date:</strong> <%= @target.target_date %></p></li>
  <li><p><strong>Target Amount:</strong> $<%= @target.target_amount %></p></li>
  <li><p><strong>Status:</strong> <%= @target.status ? 'Completed' : 'Pending' %></p></li>
<% end %>
