<!-- app/views/dashboard/index.html.erb -->

<h1>Welcome to Your Dashboard</h1>
<p>Hello, <%= current_user.name %>!</p>

<h2>Your Target Amounts:</h2>
<ul>
  <% @target_amounts.each do |target| %>
    <li><%= target.name %> - $<%= target.target_amount %></li>
  <% end %>
</ul>

<h2>Your Transactions:</h2>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.date %></td>
        <td>$<%= transaction.amount %></td>
        <td><%= transaction.description_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Your Balances:</h2>
<ul>
  <% @balances.each do |balance| %>
    <li>Current Balance: $<%= balance.current_balance %></li>
  <% end %>
</ul>
